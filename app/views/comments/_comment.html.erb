<div class='col-md-12'>
  <div class='row' >
    <% if comment.user_id != nil %>
    <div class='col-md-12'>
    	<table width='100%'>
        <tr >
          <% @author=User.find(comment.user_id) %>
    	     <% unless mobile_device? %>
    	        <td rowspan="2" width='40px'style='padding-right:0px'>
                 <%= link_to image_tag(@author.avatar.url,size: "40x40",class: "img-circle"),user_path(@author) %>
              </td>
              <td style='padding-left:10px'>
                <button style='border-radius:3px;background-color:white;border:1px solid #e57866;padding:0px 5px 0px 5px;font-size:10px;color:#e57866'>
                 <%= @author.user_type %>
                </button>
                <span style='color:#639fca'><%= @author.user_name %></span>
              </td>
            <% end %>
        </tr>
        <tr>
              <td style='padding-left:10px;color:#999;font-size:10px'>
                <%= comment.created_at.strftime("%y.%m.%d %H.%M") %>
              </td>
        </tr>
        <tr>
          <td style='vertical-align:top;padding-top:10px;font-size:16px;font-family:Hiragino Sans GB;line-height:1.5' colspan='2'>
                          
            <%= comment.body %>
                    
          </td>
        </tr>
      </table>
    </div>     
    <% end %>
  </div>
  <div class='row'>
    <div class='col-lg-12'>
	    <hr>
    </div>
  </div>
</div>
