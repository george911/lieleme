<div class="col-md-5" style=''><!--col-md对应的Container width：970px -->
  <br><br>
    <div class='panel panel-info'>
      <div class='panel-heading'>
        <div class='col-md-12'>
          <h4>发布职位</h4>
        </div>
        <div class='row'>
        </div>
      </div>

      <div class='panel-body'>

                <%= form_for @job do |f| %>
                  <% if @job.errors.any? %>
                    <div class='col-lg-12' style='color:red'>
                      <ul>
                      <% @job.errors[:avatar].each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <div class="col-lg-6" style='margin-top:10px'>
                    <%= f.text_field :title,class: 'form-control',placeholder:"职位" %>
                  </div>
                  <div class="col-lg-6" style='margin-top:10px'>
                    <%= f.text_field :employer,class: 'form-control',placeholder:"雇主简称" %>
                  </div>
                  <div class="col-lg-6" style='margin-top:10px'>
                    <%= f.select :industry,grouped_options_for_select(Job::INDUSTRY,nil,prompt:"行业"),class: 'form-control' %>
                  </div>
                  <div class="col-lg-6" style='margin-top:10px'>
                    <%= f.text_field :city,class: 'form-control',placeholder:"城市" %>
                  </div>
                  <div class="col-lg-12" style='margin-top:10px'>
                    <%= f.text_field :addr,class: 'form-control',placeholder:"地址" %>
                  </div>
                  <div class="col-lg-6" style='margin-right:200px;margin-top:10px'>
                    <%= f.number_field :commission,class: 'form-control',placeholder:"佣金" %>
		  </div>
		  <div class="" style='width:0px;margin-top:10px;margin-right:0px'>
		    <div class='well form-control' style='border:0px;padding-top:3px;padding-bottom:3px;'>
		    <%= f.file_field :avatar, class: "btn btn-default btn-file" %>
		    </div>
		  </div>
		  <div class='col-lg-6' style='margin-right:200px;margin-top:10px;'>
		    <div class='well form-control' style='margin-bottom:0px;padding-top:3px;padding-bottom:3px'>
		      <span style='font-size:15px'>设置logo图片&nbsp;&nbsp;</span>
		    </div>
		  </div>
		  <div class='col-lg-12' style='marginp-top:0px;'>
		    <a tabindex="0" class="" role="button" data-trigger="click" title="logo图案将作为微信共享的链接图片">
			<i style='margin:5px 0px 0px 0px' class='glyphicon glyphicon-question-sign'></i>
		    </a>
		  </div>
		  <div class='col-lg-3' id='target' style='margin-top:10px'>
		  </div>
                  <div class="col-lg-12" style='margin-top:10'>
                    <%= f.text_area :memo,class: 'form-control', placeholder:"备注" %>
                  </div>
                  <div class="col-lg-12" style='margin-top:10px'>
                    <%= f.text_area :company_info,class: 'form-control',placeholder:"公司信息" %>
                  </div>

                   <div class="col-lg-8 " style='margin-top:10px'>
		     <%= f.check_box :interview %>
		     <%= "只接受面试过的候选人" %>
                  </div>
                   <div class="col-lg-4 " style='margin-top:10px'>
                    <%= f.submit "继续",class: "btn btn-success" %>
                  </div>
                <% end %>
            </div>
        </div>
</div>
