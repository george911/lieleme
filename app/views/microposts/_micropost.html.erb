<li id="micropost-<%= micropost.id %>">
  <%= link_to image_tag(micropost.user.avatar.url(:small), class: 'img-squre',size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.user_name, micropost.user %></span>
  <span class="content"><%= micropost.content %>
  <% if micropost.job_id %>
	  <%= link_to "查看详细", micropost.job,method: :get, target: "_blank" %>
  <% end %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %>
    <% if current_user == micropost.user %>
      <%= link_to "delete", micropost, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>
